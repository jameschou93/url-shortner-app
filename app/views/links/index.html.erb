<h1>Your links</h1>

<%= link_to "Add New Link", "/links/new" %>
<table>
  <tr>
    <th>Slug</th>
    <th>Target URL</th>
    <th>Created At</th>
  </tr>
  <% @links.each do |link| %>
    <tr>
      <td><%= link.slug %></td>
      <td><%= link.target_url %></td>
      <td><%= link.created_at %></td>
      <td><%= link_to "Edit", "/links/#{link.id}/edit" %></td>
      <td><%= link_to "Delete", "/links/#{link.id}", method: :delete %></td>
    </tr>
  <% end %>


